<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp">
    <RelativeLayout android:orientation="horizontal" android:background="@drawable/design_template" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="140dp">
        <com.google.android.material.imageview.ShapeableImageView android:id="@+id/tamplate_img" android:background="@drawable/design_tamplate_img" android:layout_width="91dp" android:layout_height="match_parent" android:src="@drawable/common_google_signin_btn_icon_dark_normal" android:layout_marginStart="10dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="92dp" android:layout_toRightOf="@+id/tamplate_img" android:layout_marginStart="10dp">
            <TextView android:textSize="20dp" android:textColor="@color/new_color" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginBottom="-5dp" android:text="@string/fui_name_hint" android:includeFontPadding="false" android:fontFamily="@font/bungee_inline"/>
            <TextView android:textSize="11dp" android:id="@+id/text" android:layout_width="190dp" android:layout_height="wrap_content" android:text="@string/fui_name_hint"/>
        </LinearLayout>
        <LinearLayout android:gravity="end" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="29dp" android:layout_alignParentBottom="true" android:layout_marginEnd="10dp">
            <TextView android:textSize="20dp" android:textColor="@color/white" android:id="@+id/updated_price_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fui_name_hint" android:includeFontPadding="false" android:fontFamily="@font/bungee_inline"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
