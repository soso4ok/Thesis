<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/tamplate_img"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/design_background_img"
            android:scaleType="fitXY"
            android:src="@drawable/common_google_signin_btn_icon_dark_normal" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="0dp"
            android:layout_toRightOf="@+id/tamplate_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:fontFamily="@font/bungeespice_regular"
                android:includeFontPadding="false"
                android:text="@string/fui_name_hint"
                android:textColor="@color/purple_500"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:maxLines="3"
                android:lineSpacingExtra="0.1px"
                android:text="@string/fui_name_hint"
                android:textColor="@color/old_rose"
                android:textSize="12dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="236dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/tamplate_img"
            android:gravity="end"
            android:padding="0dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/updated_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_inline"
                android:includeFontPadding="false"
                android:padding="-10dp"
                android:text="@string/fui_name_hint"
                android:textColor="@color/price_color"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
