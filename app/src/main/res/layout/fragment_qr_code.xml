<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp">

            <ImageButton
                android:id="@+id/recent_purchases_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="6dp"
                android:layout_toStartOf="@+id/cart_button"
                android:src="@drawable/recent_purchases" />

            <ImageButton
                android:id="@+id/cart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@drawable/shop_cart" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qr_wrapper"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/background_qr_code">

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="277dp"
            android:layout_height="278dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/qr_code" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qr_wrapper"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/unnecessary_xml"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/unnecessary_xml" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/unnecessary_xml"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/background_referral_points">

            <TextView
                android:id="@+id/referral_points"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/bungeespice_regular"
                android:gravity="center"
                android:textColor="@color/purple_500"
                android:textSize="21dp" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>